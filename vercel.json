{
    "version": 2,
    "builds": [
        {
            "src": "client/**",
            "use": "@vercel/static"
        },
        {
            "src": "agent/src/index.ts",
            "use": "@vercel/node",
            "config": {
                "nodeVersion": "23.x"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "agent/src/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "client/$1"
        }
    ],
    "functions": {
        "agent/src/index.ts": {
            "memory": 3008,
            "maxDuration": 60
        }
    }
}
