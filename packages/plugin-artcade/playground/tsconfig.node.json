{
    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "ESNext",
        "lib": [
            "ESNext"
        ],
        "baseUrl": ".",
        "paths": {
            "../../shared/*": [
                "src/shared/*"
            ]
        }
    },
    "include": [
        "vite.config.ts",
        "src/server/**/*",
        "src/shared/**/*",
        "../src/**/*"
    ]
}