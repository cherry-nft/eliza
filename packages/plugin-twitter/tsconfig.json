{
    "extends": "../core/tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "dist/types",
        "composite": true,
        "paths": {
            "@ai16z/client-twitter": [
                "../client-twitter/src"
            ],
            "@ai16z/client-twitter/*": [
                "../client-twitter/src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "references": [
        {
            "path": "../core"
        },
        {
            "path": "../client-twitter"
        }
    ]
}